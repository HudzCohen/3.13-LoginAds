@using _3._13_LoginAds.Data

@model MyAccountViewModel

<div class="row">
    @foreach (Ad ad in Model.Ads)
    {
        <div class="col-md-6 offset-md-3">
            <div class="bg-light p-4 rounded shadow mb-3">
                <h5>Listed on @Model.</h5>
                <h5>Phone Number: 18008888888</h5>
                <h3>Details:</h3>
                <p>Looking to give away one friend. Promises to annoy you to their utmost ability...&#xD;&#xA;Any takers?</p>
                <form method="post" action="/home/deletead">
                    <input type="hidden" name="id" value="@ad.Id" />
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    }
</div>